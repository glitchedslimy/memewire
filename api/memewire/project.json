{
    "name": "memewire",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "api/memewire/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/api/memewire",
                "main": "api/memewire/src/main.ts",
                "tsConfig": "api/memewire/tsconfig.json",
                "transformers": ["@nestjs/swagger/plugin"],
                "assets": ["api/memewire/src/assets"]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "api/memewire/src/environments/environment.ts",
                            "with": "api/memewire/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["api/memewire/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "api/memewire/jest.config.ts",
                "passWithNoTest": true
            }
        }
    },
    "tags": []
}